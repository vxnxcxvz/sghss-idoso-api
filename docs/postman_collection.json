{
  "info": {
    "name": "SGHSS - API Tests (6 casos)",
    "description": "Coleção mínima de testes (Auth + Pacientes) para validação do backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000", "type": "string" },
    { "key": "token", "value": "", "type": "string" },
    { "key": "cpf", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "CT01 - Registrar ADMIN",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n \"nome\": \"Admin Teste\",\n \"email\": \"admin@teste.com\",\n \"senha\": \"senha123\",\n \"tipo\": \"ADMINISTRADOR\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201 (ou 409 se já existir)', function () {",
                  " pm.expect([201,409]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "CT02 - Login (salva token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n \"email\": \"admin@teste.com\",\n \"senha\": \"senha123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Token presente', function () {",
                  " var json = pm.response.json();",
                  " pm.expect(json.token).to.exist;",
                  " pm.collectionVariables.set('token', json.token);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "CT03 - /me (com token)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.test('Status 200', function () { pm.response.to.have.status(200); });"]
              }
            }
          ]
        }
      ]
    }
  ]
}
